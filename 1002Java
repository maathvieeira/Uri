import java.util.*;

public class Main {

    
    public static void main(String[] args) {
        Scanner input;
        input = new Scanner(System.in);
        
        double raio = input.nextDouble();
        double pi;
        double area;
        
        pi = 3.14159;
        
        area = pi * (raio * raio);
        
        System.out.printf("A=%.4f\n",area);
    }
    
}
