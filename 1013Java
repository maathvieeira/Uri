import static java.lang.Math.abs;
import java.util.*;

public class Main {

    
    public static void main(String[] args) {
        Scanner input;
        input = new Scanner(System.in);
        
        int a = input.nextInt();
        int b = input.nextInt();
        int c = input.nextInt();
        int soma1;
        
        soma1 = (a+b+Math.abs(a-b))/2;
        
        if(soma1>c){
            System.out.println(soma1+" eh o maior");
        }else{
            System.out.println(c+ " eh o maior");
        }
    }
    
}
